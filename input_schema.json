{
  "title": "Email Scraper",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "urls": {
      "title": "URLs to Scrape",
      "type": "array",
      "description": "List of URLs to scrape for emails",
      "editor": "json",
      "items": {
        "type": "string",
        "pattern": "^https?://"
      }
    },
    "url": {
      "title": "Single URL (Legacy)",
      "type": "string",
      "description": "Single URL to scrape (for backwards compatibility)",
      "editor": "textfield"
    }
  },
  "oneOf": [
    { "required": ["urls"] },
    { "required": ["url"] }
  ]
}